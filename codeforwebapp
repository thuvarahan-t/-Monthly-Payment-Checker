<body>
  <div class="container">
    <h2>üìÖ Monthly Payment - Batch 2025</h2>
    <label for="regNo">Enter Registration Number:</label>
    <input type="text" id="regNo" placeholder="e.g., 250110">
    <button onclick="checkData()">Check</button>
    <div id="result"></div>
  </div>

  <script>
    async function checkData() {
      const regNo = document.getElementById("regNo").value.trim();
      const resultDiv = document.getElementById("result");
      resultDiv.innerHTML = "üîé Checking...";

      if (!regNo) {
        resultDiv.innerHTML = "‚ùå Please enter a registration number.";
        return;
      }

      try {
        const response = await fetch("https://script.google.com/macros/s/******************************************************=" + encodeURIComponent(regNo));
        const data = await response.json();

        if (data.status === "not found") {
          resultDiv.innerHTML = "‚ùå Registration number not found.";
        } else {
          let html = `
            <p><strong>üë§ Name:</strong> ${data.name}</p>
            <p><strong>üåç District:</strong> ${data.district}</p>
            <p><strong>üéì Batch:</strong> ${data.batch}</p>
            <h3 style="margin-top: 20px;">üìÜ Monthly Class Status</h3>
            <table>
              <tr><th>Month</th><th>Status</th></tr>
          `;

          for (let month in data.classes) {
            html += `<tr><td>${month}</td><td>${data.classes[month]}</td></tr>`;
          }

          html += "</table>";
          resultDiv.innerHTML = html;
        }
      } catch (error) {
        resultDiv.innerHTML = "‚ö†Ô∏è Error fetching data. Please try again.";
        console.error(error);
      }
    }
  </script>
